<!DOCTYPE html>
<html>
  <head>
    <title>Invoices Dashboard</title>
    <link rel="stylesheet" href="/common_header.css" title="text/css">
    <link rel="stylesheet" href="/secondary_header.css" title="text/css">
    <link rel="stylesheet" href="/dashboard.css" title="text/css">
  </head>
  <body>
    <header>
      <h3>
        <form>
          <a href='/' class="homepage-link">Little Shop</a>
          <a href="/invoices">Invoices</a>
          <a href="/items">Items</a>
          <a href="/merchants">Merchants</a>
        </form>
      </h3>
    </header>
    <div class="secondary-header">
      <h1>Invoice Dashboard</h1>
    </div>
    <div class="flex-container">
      <div id="item-count">
        <h4>Status Percentages</h4>
        <h6>Pending:<%=@pending_percent%>%</h6>
        <h6>Shipped:<%=@shipped_percent%>%</h6>
        <h6>Returned:<%=@returned_percent%>%</h6>
      </div>
      <div id="item-avg-price">
        <h4>High Price</h4>
        <h6><%= @high_price %></h6>
      </div>
      <div id="item-avg-price">
        <h4>Low Price</h4>
        <h6><%= @low_price %></h6>
      </div>
      <div id="item-avg-price">
        <h4>High Quantity</h4>
        <h6><%= @high_qty %></h6>
      </div>
      <div id="item-avg-price">
        <h4>Low Quantity</h4>
        <h6><%= @low_qty %></h6>
      </div>
    </div>
  </body>
</html>
