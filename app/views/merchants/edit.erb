          <h3 class="name1">
            Name
          </h3>
          <form class="update_merchant" action="/merchant/<%=@merchant.id%>" method="post">
            <input class="entername" type="text" name="merchant[name]" placeholder="Please Enter New Name">
            <br>
            <br>
            <br>
            <br>
            <input class="create-button" type="submit" value="Update Merchant">
            <a class="cancelcreate" href="/merchants">Cancel</a>
          </form>
        </div>
      </center>
    </div>
  </body>
