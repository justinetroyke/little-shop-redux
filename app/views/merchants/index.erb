<link rel="stylesheet" href="/merchant.css" title="CSS" type="text/css" />
<link rel="stylesheet" href="/common_header.css" title="CSS" type="text/css" />

<header>
  <h3>
    <a href='/'>Little Shop</a>
    <button class = "invoices" onclick="location.href='/invoices'" type="button"> Invoices</button>
    <button class ="items" onclick="location.href='/items'" type="button"> Items</button>
    <button class="merchants" onclick="location.href='/merchants'" type="button"> Merchants</button>
  </h3>
</header>

<div style="width:relative;height:100px;border:3px solid #000;">
  <h1> Merchants </h1>
  <center>
    <button onclick="location.href='/merchants/new'" action = 'get' type="button">
      Create A New Merchant
    </button>
  </center>
</div>

<br>

<% @merchants.each_with_index do |merchant, index| %>
<center>
<% if index.odd? %>
  <form action="/merchants/<%=merchant.id%>/delete" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <div style="background-color: grey;width:1000px;height:25px;border:3px solid #000;">
      <a href='/merchants/<%=merchant.id%>' style="float:left;"><%= merchant.name%></a>
      <button style="float:right;" type="submit" class='deletebutton'> Delete</button>
      <button style="float:right;" class='editbutton' href='/merchants/<%=merchant.id%>/edit'> Edit</button>
    </div>
  </form>
<% else %>
    <form action="/merchants/<%=merchant.id%>/delete" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <div style="width:1000px;height:25px;border:3px solid #000;">
      <a href='/merchants/<%=merchant.id%>' style="float:left;"><%= merchant.name%></a>
      <button style="float:right;" type="submit" class='deletebutton'> Delete</button>
      <button style="float:right;" class='editbutton' href='/merchants/<%=merchant.id%>/edit'> Edit</button>
    </div>
  </form>
  <% end %>

</center>

<br>

<% end%>
