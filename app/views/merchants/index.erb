<link rel="stylesheet" href="/merchant.css" title="CSS" type="text/css"/>
<link rel="stylesheet" href="/common_header.css" title="CSS" type="text/css"/>

<header>
  <h3>
    <a class="name" href='/'>Little Shop</a>
    <a style="float:right;" class="invoices" href='/invoices'>
      Invoices</a>
    <a style="float:right;" class="items" href='/items'>
      Items</a>
    <a style="float:right;" class="merchants" href='/merchants'>
      Merchants</a>
  </h3>
</header>

<div style="width:relative;height:100px;border:3px solid #000;">
  <h1>
    Merchants
  </h1>
  <center>
    <button onclick="location.href='/merchants/new'" action='get' type="button">
      Create A New Merchant
    </button>
  </center>
</div>

<br>

<% @merchants.each do |merchant| %>
  <center>
    <div style="width:1000px;height:25px;border:3px solid #000;">
      <form action="/merchants/<%=merchant.id%>/delete" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <a href='/merchants/<%=merchant.id%>' style="float:left;"><%= merchant.name%></a>
        <button style="float:right;" type="submit" class='deletebutton'>
          Delete</button>
      </form>
      <button style="float:right;" class='editbutton' onclick="location.href='/merchants/<%=merchant.id%>/edit'">
        Edit</button>
    </div>
  </center>

  <br>
<% end %>